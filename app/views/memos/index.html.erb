<div class="wrapper">
    <%= render "header" %>
        
    <div class="body-content">
        <div class="left-side">
            <%= render "left_memo" %>
        </div>

        <div class="main">
            <div class="memo-area", id="memo-area">
                <div class="memo-box">
                    <%= form_with(model: @memo, local: true) do |f| %>
                        <div class="memo-title">
                            <%= f.text_area :title %>
                        </div>
                        <div class="memo-textarea">
                            <%= f.text_area :content %>
                        </div>
                        <div class="memo-btn">
                            <%= f.submit '保存', class: 'form-submit' %>
                            <button class="form-submit">キャンセル</button>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>

        <div class="right-side">
            <div class="calendar">
            </div>
        </div>
    </div>
</div>